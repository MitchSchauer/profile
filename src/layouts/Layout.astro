---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-gradient-to-b from-gray-900 via-gray-800 to-black text-white min-h-screen">

    <main class="max-w-4xl mx-auto p-4">
      <slot />
    </main>
 <body class="h-full font-sans bg-gradient-to-b from-gray-900 via-gray-800 to-black text-white">

<html lang="en" class="h-full">

